{
    "manifest_version": 3,
    "name": "TaskLokr",
    "version": "1.0",
    "description": "Stay focused and boost your productivity with TaskLokr.",
   "permissions": [
  "storage",
  "tabs",
  "scripting",
  "declarativeNetRequest"
],

    "host_permissions": [
  "*://*.youtube.com/*",
  "*://*.instagram.com/*",
  "*://*.netflix.com/*"
],
"declarative_net_request": {
  "rule_resources": []
},

    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "options_page": "dashboard.html",
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
  